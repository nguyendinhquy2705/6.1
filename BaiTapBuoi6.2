class Bai2_For {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Nhap n: ");
        int n = sc.nextInt();
        int sum = 0;
        for (int i = 2; i <= n; i += 2) {
            sum += i;
        }
        System.out.println("Tong so chan = " + sum);
    }
}

// bai2 while:
class Bai2_While {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Nhap n: ");
        int n = sc.nextInt();
        int sum = 0;
        int i = 2;

        while (i <= n) {
            sum += i;
            i += 2;
        }
        System.out.println("Tong so chan = " + sum);
    }
}
